{% set type = type ?? 'page' %}
{% set search = signals.search ?? null %}
{% set q = craft.entries.section(['blog', 'pages']) %}
{% set entries = search ? q.search(search).orderBy('score desc, postDate desc').limit(100).all : [] %}

{% if search %}
  {% executescript %}
    console.log( '%cğŸš€ Lazy Search Scanner Initialized', 'background: linear-gradient(to right, #0af, #00e0ff); color: #000; font-weight: bold; padding: 6px 10px; border-radius: 5px; font-size: 12px;' );
    console.log( '%cğŸ” Search query detected:', 'color: #ff0; font-size: 13px; font-weight: bold; padding: 2px 0;');
    console.log( '%c{{ search|e('js') }}', 'color: #fff; background: #1e1e1e; padding: 6px 12px; border-radius: 6px; font-family: monospace; font-size: 14px; box-shadow: 0 0 4px rgba(0,0,0,0.3);' );
    _paq.push(['trackEvent', 'Search', 'Query', '{{ search|e('js') }}']);
  {% endexecutescript %}
{% endif %}

{% if entries %}
  {% patchelements %}
    <div id="searchresult-{{ type }}">
      <p class="mb-4">âœ… {{ entries|length }} results found</p>
      <div class="divide-y divide-stone-300 space-y-3">
        {% for entry in entries %}
          <p class="py-3">
            <a href="{{ entry.url }}" class="hover:text-primary">ğŸ‘‰ {{ entry.title }} / {{ entry.section.handle }}</a>
          </p>
        {% endfor %}
      </div>
    </div>
  {% endpatchelements %}
{% else %}
  {% patchelements %}
    <div id="searchresult-{{ type }}">
      {% if not search %}
        <p>ğŸ’¡ Try entering a search term, e.g. "frontend"</p>
        {% executescript %}
          console.log('%cğŸ” Waiting for input...', 'color: #0af; font-weight: bold; font-size: 12px;');
          console.log('%cTry something like "frontend", "craft", or "magic unicorns".', 'color: #fff; background: #222; padding: 4px 8px; border-radius: 4px; font-family: monospace;');
        {% endexecutescript %}
      {% else %}
        <p>ğŸ«£ No results found for "{{ search }}". Try a different keyword.</p>
        {% executescript %}
          console.log('%cğŸ˜µ No results for:', 'color: #f00; font-weight: bold; font-size: 12px;');
          console.log('%c{{ search|e('js') }}', 'color: #fff; background: #f00; padding: 4px 8px; border-radius: 4px; font-family: monospace;');
          console.log('%cğŸ“¦ Your search box is empty. Try "matrix", "frontend", or summon the dev gods with "bug-free".', 'color: #999; font-style: italic; font-size: 11px;');
        {% endexecutescript %}
      {% endif %}
    </div>
  {% endpatchelements %}
{% endif %}
