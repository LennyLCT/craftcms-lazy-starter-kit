{% extends '_layouts/base' %}

{% block main %}
  {% cache using key 'entry__' ~ craft.app.request.pathInfo %}
    {{ craft.vite.script('src/vue/webcomponents/blog-list.ce.ts') }}
    <header class="blocks blocks--header">
      <div class="blocks__content">
        <h1 class="ui-h1">Blog Vue</h1>
      </div>
    </header>
    <section class="blocks blocks--text">
      <div class="blocks__content prose md:prose-lg lg:prose-xl">
        {{ entry.text }}
      </div>
    </section>
    <section class="blocks blocks--vue">
      <div class="blocks__popout">
        <blog-list></blog-list>
      </div>
    </section>
  {% endcache %}
{% endblock %}
